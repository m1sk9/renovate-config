{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "files": {
    "include": ["*.json", "*.json5", "./*.jsonc"],
    "ignore": ["**/node_modules/**"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto"
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": false
  }
}
